#define  _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <fstream>

using namespace std;

int main()
{
	char fName[100] = {'t','e','x','t','.','t','x','t'}, a;
                           

	setlocale(LC_ALL, ".1251");  
	FILE *in = fopen(fName, "r"); 
	if (in == NULL)                          
	{
		cout << "Ошибка в открытии файла in.txt" << endl;
	}
	else
	{
		int const size = 256;
		char str[size];
		fgets(str, size, in);   //записываем в str первую строку.
		while (!feof(in))    //пока не конец файла исполняем цикл.
		{
			cout << str;        //вывод на экран строки
			fgets(str, 64, in); //запись следующей
		}
		_fcloseall();         //закрываем все открытые (в нашем случае один) файлы.
	}


	system("pause");

	return 0;
}
